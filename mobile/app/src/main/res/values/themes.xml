<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Medisupply" parent="Theme.Material3.Light.NoActionBar">
    </style>

    <style name="Theme.Medisupply" parent="Base.Theme.Medisupply">
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:height">42dp</item>
        <item name="android:background">@drawable/primary_button_background</item>
    </style>

    <style name="SecondaryButtonStyle">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:height">42dp</item>
        <item name="android:background">@drawable/secondary_button_background</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.FloatingActionButton.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="itemPaddingTop">16dp</item>
        <item name="itemPaddingBottom">16dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextAppearance</item>
    </style>

    <style name="BottomNavigationTextAppearance" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textStyle">normal</item>
    </style>

</resources>