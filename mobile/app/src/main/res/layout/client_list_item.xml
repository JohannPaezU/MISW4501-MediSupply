<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:background="@color/pink_background"
    android:backgroundTint="@color/pink_background"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section with Avatar and Company Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Avatar Circle -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/pink"
                app:cardElevation="1dp">

                <TextView
                    android:id="@+id/textAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Company Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textClientName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Empresa 1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textClientNIT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="NIT: 12345678"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Expand/Collapse Indicator -->
            <ImageView
                android:id="@+id/iconExpand"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_chevron_down"
                android:contentDescription="Expandir detalles"
                app:tint="@color/dark_gray" />

        </LinearLayout>

        <!-- Contact Information Section -->
        <LinearLayout
            android:id="@+id/expandedDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/textClientPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teléfono: 3003553391"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textClientAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Dirección: calle 104 #15-82 bogota"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textClientEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Correo: empresa1@gmail.com"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Action Buttons Section -->
        <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="gone">

            <!-- Product Recommendations Button -->
            <Button
                android:id="@+id/buttonRecommendations"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:backgroundTint="@color/gray"
                android:text="Recomendaciones de productos"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <!-- Visit Button -->
            <Button
                android:id="@+id/buttonVisit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Visita"
                android:backgroundTint="@color/pink"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
